{
  "manifest_version": 2,
  "name":    "iCabbi Caller ID Tab Switcher",
  "version": "0.1",
  "offline_enabled": true,

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },


  "externally_connectable": {
    "matches": [ 
           "*://*.localh0st.com/*"
    ]
},
  "page_action": {
    "default_title": "iCabbi Caller ID Tab Switcher"
},

  "permissions": ["tabs"]
}